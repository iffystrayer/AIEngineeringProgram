# U-AIP Scoping Assistant - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# ANTHROPIC API CONFIGURATION
# ============================================================================
ANTHROPIC_API_KEY=your_api_key_here

# Default model (used when no tier is specified)
ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-20250514

# Model tier configuration for intelligent routing
# FAST: Quick, cost-effective tasks (summaries, simple queries)
# BALANCED: General-purpose tasks (default for most operations)
# POWERFUL: Complex reasoning, planning, code generation
ANTHROPIC_MODEL_FAST=claude-haiku-4-5-20251001
ANTHROPIC_MODEL_BALANCED=claude-sonnet-4-20250514
ANTHROPIC_MODEL_POWERFUL=claude-sonnet-4-20250514

# Enable cost optimization (automatically use Haiku for simple tasks)
LLM_COST_OPTIMIZATION=true

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection details
DB_HOST=localhost
DB_PORT=15432
DB_NAME=uaip_scoping
DB_USER=uaip_user
DB_PASSWORD=your_secure_password_here

# Database connection pool settings
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10
DB_POOL_TIMEOUT=30

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Application environment (development, staging, production)
APP_ENV=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application ports (5-digit only per CLAUDE.md)
APP_PORT=18000
METRICS_PORT=18001

# Session timeout in minutes
SESSION_TIMEOUT=60

# ============================================================================
# DOCUMENT GENERATION CONFIGURATION
# ============================================================================
# Output directory for generated charters
CHARTER_OUTPUT_DIR=./charters

# Template directory
TEMPLATE_DIR=./templates

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
# Enable Prometheus metrics
ENABLE_METRICS=true

# Metrics export port
PROMETHEUS_PORT=18001

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Enable security scanning
ENABLE_SECURITY_SCAN=true

# JWT secret for session tokens (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# Enable debug mode (never use in production)
DEBUG=false

# Enable hot reload in development
HOT_RELOAD=true

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================
# Test database connection (separate from production)
TEST_DB_HOST=localhost
TEST_DB_PORT=15433
TEST_DB_NAME=uaip_scoping_test
TEST_DB_USER=uaip_test_user
TEST_DB_PASSWORD=test_password

# ============================================================================
# OPTIONAL: EXTERNAL INTEGRATIONS
# ============================================================================
# Add any external service configurations here as needed
# EXTERNAL_SERVICE_API_KEY=your_key_here
